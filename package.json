    "type": "git",
    "url": "git+https://github.com/fersilva16/fersilva.dev.git"
  },
  "bugs": {
    "url": "https://github.com/fersilva16/fersilva.dev/issues"
  },
  "homepage": "https://github.com/fersilva16/fersilva.dev#readme",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next dev",
    "format": "prettier --write .",
