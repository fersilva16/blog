{
  "name": "fersilva.dev",
  "description": "Personal Website",
  "author": "Fernando Silva <fernandonsilva16@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fersilva16/fersilva.dev.git"
  },
  "bugs": {
    "url": "https://github.com/fersilva16/fersilva.dev/issues"
  },
  "homepage": "https://github.com/fersilva16/fersilva.dev#readme",
  "license": "MIT",
  "scripts": {
    "build": "next build",
    "dev": "next-remote-watch posts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "i18n:scan": "i18next-scanner",
    "lint": "eslint .",
    "lint:fix": "lint --fix",
    "postinstall": "simple-git-hooks",
    "start": "next start",
    "test": "jest",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit"
  },
  "dependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "gray-matter": "4.0.3",
    "i18next-scanner": "4.3.0",
    "luxon": "3.4.0",
    "mdast": "3.0.0",
    "next": "13.5.5",
    "next-intl": "2.19.1",
    "next-remote-watch": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.10.1",
    "react-markdown": "8.0.7",
    "react-syntax-highlighter": "15.5.0",
    "remark-parse": "10.0.2",
    "unified": "11.0.2",
    "unist-util-visit": "5.0.0",
    "zod": "3.22.2"
  },
  "devDependencies": {
    "@babel/core": "7.22.10",
    "@next/eslint-plugin-next": "13.4.19",
    "@testing-library/jest-dom": "6.0.1",
    "@testing-library/react": "14.0.0",
    "@types/jest": "29.5.3",
    "@types/luxon": "3.3.1",
    "@types/mdast": "4.0.0",
    "@types/node": "20.5.1",
    "@types/react": "18.2.20",
    "@types/react-syntax-highlighter": "15.5.7",
    "@types/testing-library__jest-dom": "6.0.0",
    "@typescript-eslint/eslint-plugin": "6.4.0",
    "@typescript-eslint/parser": "6.4.0",
    "esbuild": "0.19.2",
    "eslint": "8.47.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-import-resolver-typescript": "3.6.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "hygen": "6.2.11",
    "jest": "29.6.2",
    "jest-environment-jsdom": "29.6.2",
    "nano-staged": "0.8.0",
    "next-page-tester": "0.33.0",
    "prettier": "3.0.2",
    "simple-git-hooks": "2.9.0",
    "typescript": "5.1.6"
  },
  "nano-staged": {
    "*": "prettier --ignore-unknown --write",
    "*.{ts,tsx}": [
      "bash -c 'i18next-scanner'",
      "bash -c 'pnpm type-check'"
    ],
    "*.{js,ts,tsx}": "eslint --fix"
  },
  "pnpm": {
    "overrides": {
      "@types/mdast": "$@types/mdast"
    }
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm nano-staged"
  }
}
