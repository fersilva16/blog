---
import Footer from '../components/Footer.astro';
---

<body transition:animate="slide">
  <main>
    <slot />
  </main>

  <Footer />
</body>

<style>
  body {
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    width: 80vw;
    padding-top: var(--spacing-2x);
    padding-bottom: var(--spacing-2x);
  }

  main {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4x);
  }

  @media screen and (min-width: 768px) {
    body {
      width: 40vw;
    }
  }
</style>
