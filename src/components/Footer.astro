---
import Link from './Link.astro';
import { config } from '../config';

const navLinks = [
  {
    title: 'Home',
    href: '/',
  },
  {
    title: 'Code',
    href: config.SOURCE_URL,
    isExternal: true,
  },
  {
    title: 'RSS',
    href: '/rss.xml',
  },
];
---

<footer>
  <p>
    Copyright Â© {new Date().getFullYear()} Fernando
  </p>
  <nav>
    <ul>
      {
        navLinks.map((link) => (
          <li>
            <p>
              <Link href={link.href} isExternal={link.isExternal}>
                {link.title}
              </Link>
            </p>
          </li>
        ))
      }
    </ul>
  </nav>
</footer>

<style>
  footer {
    border-top: 1px solid rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: flex-end;
    flex-wrap: wrap-reverse;
    justify-content: space-between;
    margin-top: var(--spacing-4x);
    padding-top: var(--spacing);
  }

  @media screen and (max-width: 425px) {
    footer {
      gap: var(--spacing);
    }

    footer * {
      flex: 1;
      text-align: center;
    }
  }

  footer nav ul {
    display: flex;
    gap: var(--spacing-2x);
  }
</style>
